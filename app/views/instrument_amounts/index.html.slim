.row.mb-2
  .col
    h1 Amounts

.row.mb-2
  .col
    = line_chart @chart_data, min: nil

table.table.table-striped.table-sm
  thead
    tr
      th Date
      - @instruments.each do |i|
        th= i
  tbody
    - @dates.each do |date|
      - @amounts = InstrumentAmount.where(date: date).index_by(&:instrument_id)
      tr
        th= date
        - @instruments.each do |i|
          td
            - if (amount = @amounts[i.id])
              = link_to number_with_delimiter(amount.count), [:edit, i, amount]
            - else
              = link_to '+', [:new, i, :instrument_amount]
